<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="K4os.Compression.LZ4" Version="1.3.8" />
      <PackageReference Include="PacketDotNet" Version="1.4.8" />
      <PackageReference Include="SharpPcap" Version="6.3.1" />
    </ItemGroup>

    <!-- 复制 ENet DLL 到输出目录 -->
    <!-- 优先级：1. 项目根目录的 enet.dll（我们编译的） 2. enet_build 目录 -->
    <ItemGroup>
        <!-- 优先使用项目根目录的 DLL（我们编译的版本） -->
        <None Include=".\enet.dll" Condition="Exists('.\enet.dll')">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <Link>enet.dll</Link>
        </None>
    </ItemGroup>
    
</Project>
